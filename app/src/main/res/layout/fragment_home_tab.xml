<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/lesson_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/spacing_small">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lesson_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                tools:src="@drawable/solar_system"/>
            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lesson_image"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/normalTextColor"
                tools:text="Sistemul solar"/>
            <TextView
                android:id="@+id/lesson_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lesson_title"
                android:layout_toEndOf="@id/lesson_image"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/darkTextColor"
                android:textStyle="bold"
                tools:text="LecÈ›ia 1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/vector_arrow_right"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>